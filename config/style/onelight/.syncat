line_ending {
  color: white;
  dim: true;
  content: "¬";
}

line_number {
  color: 8;
}

margin {
  color: 8;
  content: unicode;
}

title {
  bold: true;
  color: black;
}

vcs_addition {
  color: green;
  content: "+";
}

vcs_modification {
  color: yellow;
  content: "~";
}

vcs_deletion_above, vcs_deletion_below {
  color: red;
}

vcs_deletion_above {
  content: "‾";
}

vcs_deletion_below {
  content: "_";
}
